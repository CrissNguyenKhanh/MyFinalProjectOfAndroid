<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="90dp"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:indeterminate="true" />

        <TextView
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Đang xuất hồ sơ..."
            android:layout_marginBottom="90dp"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/contentScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:visibility="gone"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- CardView: Thông tin bệnh nhân -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/anhprofilebenhnhan"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/doctor"
                        android:background="@drawable/image_rounded_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/infoLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/anhprofilebenhnhan"
                        app:layout_constraintTop_toTopOf="@id/anhprofilebenhnhan"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/fullnamebenhnhan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Họ tên: Nguyễn Văn A"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/gioitin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giới tính: Nam" />

                        <TextView
                            android:id="@+id/dob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày sinh: 01/01/1980" />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Địa chỉ: 123 Lê Lợi, Q.1" />

                        <TextView
                            android:id="@+id/phonennumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SĐT: 0901234567" />

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email: benhnhan@email.com" />

                        <TextView
                            android:id="@+id/description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ghi chú: Bệnh nhân cần theo dõi huyết áp." />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView: Thông tin bác sĩ -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/fullnamedoctor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bác sĩ: Trần Thị B"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/department"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khoa: Nội tổng quát" />

                    <TextView
                        android:id="@+id/camketcuabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cam kết: Bác sĩ chịu trách nhiệm theo dõi và điều trị cho bệnh nhân." />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView: Chữ ký -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/chukibacsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chữ ký Bác sĩ"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:id="@+id/anhchukibacsi"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/back"
                        android:scaleType="fitCenter"
                        app:layout_constraintTop_toBottomOf="@id/chukibacsi"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/chukibenhnhan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chữ ký Bệnh nhân"
                        app:layout_constraintTop_toTopOf="@id/chukibacsi"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageView
                        android:id="@+id/anhchukibenhnhan"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/back"
                        android:scaleType="fitCenter"
                        app:layout_constraintTop_toBottomOf="@id/chukibenhnhan"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Nút in hồ sơ -->
            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In hồ sơ"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:padding="12dp" />
        </LinearLayout>
    </ScrollView>



</FrameLayout>