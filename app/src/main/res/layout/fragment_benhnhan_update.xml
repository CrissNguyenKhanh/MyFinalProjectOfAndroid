<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true"
    android:background="@color/lightPurple2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/titleUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Patient"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/purple"
            android:fontFamily="@font/poppins"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" />

        <!-- Patient image -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_image_border"
            android:contentDescription="Patient image"
            app:layout_constraintTop_toBottomOf="@id/titleUpdate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- EditTexts -->
        <EditText
            android:id="@+id/editFullName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/StyledEditText"
            android:hint="Full name"
            app:layout_constraintTop_toBottomOf="@id/imageView" />

        <EditText
            android:id="@+id/editDob"
            style="@style/StyledEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Date of birth (yyyy-MM-dd)"
            android:inputType="date"
            app:layout_constraintTop_toBottomOf="@id/editFullName" />

        <EditText
            android:id="@+id/editAddress"
            style="@style/StyledEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Address"
            android:inputType="textPostalAddress"
            app:layout_constraintTop_toBottomOf="@id/editDob" />

        <EditText
            android:id="@+id/editPhone"
            style="@style/StyledEditText"
            android:hint="Phone number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="phone"
            app:layout_constraintTop_toBottomOf="@id/editAddress" />

        <EditText
            android:id="@+id/editEmail"
            style="@style/StyledEditText"
            android:hint="Email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/editPhone" />

        <EditText
            android:id="@+id/editGender"
            style="@style/StyledEditText"
            android:hint="Gender"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editEmail" />

        <TextView
            android:id="@+id/labelDoctor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Select Doctor"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@id/editGender"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Spinner
            android:id="@+id/spinnerDoctor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/labelDoctor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="12dp" />

        <!-- Checkboxes -->
        <LinearLayout
            android:id="@+id/linervip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerDoctor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <CheckBox
                android:id="@+id/daKham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checked" />

            <Space
                android:layout_width="32dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/chuaKham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not yet checked" />
        </LinearLayout>

        <!-- Button -->
        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/purple"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins"
            app:layout_constraintTop_toBottomOf="@id/linervip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
