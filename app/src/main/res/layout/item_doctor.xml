<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="centerCrop"
            android:src="@drawable/doctor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. John Doe"
            android:textSize="13sp"
            android:textColor="@color/purple"
            android:textStyle="bold"
            android:drawableStart="@drawable/tick"
            android:drawablePadding="8dp"
            android:background="@drawable/piink_border"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/imageView5"
            app:layout_constraintTop_toTopOf="@id/imageView5"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txtDepartMent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bác sĩ khoa Nội tổng hợp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/txtName"
            app:layout_constraintTop_toBottomOf="@id/txtName"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/Role"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chuyên khoa: Tim mạch"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/txtDepartMent"
            app:layout_constraintTop_toBottomOf="@id/txtDepartMent"
            app:layout_constraintEnd_toEndOf="parent" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="4.0"
            android:numStars="5"
            android:stepSize="0.5"
            android:progressTint="#ffc106"
            app:layout_constraintStart_toStartOf="@id/Role"
            app:layout_constraintTop_toBottomOf="@id/Role" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.0"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/ratingBar"
            app:layout_constraintTop_toTopOf="@id/ratingBar"
            app:layout_constraintBottom_toBottomOf="@id/ratingBar" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/lyLichButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/puple_button_stoke"
            android:text="xem Lý Lịch "
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
